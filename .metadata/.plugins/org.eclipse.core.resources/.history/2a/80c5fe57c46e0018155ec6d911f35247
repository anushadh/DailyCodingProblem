package algorithms;

public class BubbleSort {
	
	public static void main(String[] args) {
		
		int[] array = new int[] {456, 567, 234, 678, 123};
		
		BubbleSort bs = new BubbleSort();
		
		
	}
	
	private void bubbleSort(int[] array, int size) {
		int i = 0;
		
		while(i < size) {
			boolean swap = false;
			for(int j = 0; j < i; j++) {
				if(array[j] > array[j+1]) {
					swap = true;
					int temp = array[j];
					array[j] = array[j+1];
					array[j+1] = temp;
				}
			}
		}
	}
}
